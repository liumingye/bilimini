{
  "appId": "org.electron.bilimini",
  "asar": true,
  "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist"],
  "linux": {
    "category": "Video",
    "target": ["deb", "appimage", "rpm", "snap"]
  },
  "snap": {
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "mac": {
    "category": "public.app-category.video",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "darkModeSupport": true
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "zip",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  }
}
