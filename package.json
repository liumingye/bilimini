{
  "name": "bilimini",
  "version": "1.0.1",
  "main": "dist/main/index.cjs",
  "author": "liumingye <liumingye2015@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liumingye/bilimini.git"
  },
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "dev": "node scripts/watch.mjs",
    "lint:prettier": "prettier --write \"packages/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint --cache --max-warnings 0 \"packages/**/*.{vue,ts,tsx}\" --fix",
    "prebuild": "yarn lint:eslint && node scripts/build.mjs",
    "build": "yarn prebuild && electron-builder",
    "build:mac": "yarn build -m",
    "build:win": "yarn build -w",
    "build:linux": "yarn build -l"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "nprogress": "^0.2.0",
    "pinia": "^2.0.11",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@electron/remote": "^2.0.5",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vitejs/plugin-vue-jsx": "^1.3.7",
    "autoprefixer": "^10.4.2",
    "electron": "17.1.0",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "postcss": "^8.4.7",
    "postcss-html": "^1.3.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "unplugin-auto-import": "^0.6.1",
    "vite": "^2.8.4",
    "vite-plugin-optimize-persist": "^0.1.2",
    "vite-plugin-package-config": "^0.1.1",
    "vite-plugin-resolve": "^1.4.4",
    "vite-plugin-windicss": "^1.7.1",
    "windicss": "^3.4.4"
  },
  "env": {
    "//": "Used in build scripts",
    "PORT": 3344
  },
  "keywords": [
    "bilibili",
    "vite",
    "electron",
    "vue3",
    "rollup"
  ],
  "vite": {
    "optimizeDeps": {
      "include": [
        "@vue/reactivity",
        "nprogress",
        "pinia",
        "vue",
        "vue-router"
      ]
    }
  }
}
