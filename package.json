{
  "name": "bilimini",
  "version": "1.0.0",
  "main": "dist/main/index.cjs",
  "author": "liumingye",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liumingye/bilimini.git"
  },
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "dev": "node scripts/watch.mjs",
    "lint:prettier": "prettier --write \"packages/renderer/src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint --cache --max-warnings 0 \"packages/renderer/src/**/*.{vue,ts,tsx}\" --fix",
    "prebuild": "yarn lint:eslint && node scripts/build.mjs",
    "build": "electron-builder",
    "build:mac": "yarn build -m",
    "build:win32": "yarn build -w --ia32",
    "build:win64": "yarn build -w --x64",
    "build:linux": "yarn build -l"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "nprogress": "^0.2.0",
    "pinia": "^2.0.11",
    "vue": "^3.2.29",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@electron/remote": "^2.0.4",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitejs/plugin-vue": "^2.1.0",
    "@vitejs/plugin-vue-jsx": "^1.3.7",
    "autoprefixer": "^10.4.2",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "postcss": "^8.4.6",
    "postcss-html": "^1.3.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "update-electron-app": "^2.0.1",
    "vite": "^2.7.13",
    "vite-plugin-resolve": "^1.4.3"
  },
  "env": {
    "//": "Used in build scripts",
    "PORT": 3344
  },
  "keywords": [
    "bilibili",
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
